{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "baseUrl": ".",
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "@scripts/*": [
                "resources/assets/scripts/*"
            ]
        }
    },
    "include": [
        "resources/assets/**/*.ts",
        "resources/assets/**/*.d.ts",
        "resources/assets/**/*.tsx",
        "resources/assets/**/*.vue"
    ]
}
